<src:SecureWindow x:Class="openPDCManager.ModalDialogs.ManualConfigurator"
        xmlns:src="clr-namespace:TVA.Windows;assembly=TVA.Windows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:openPDCManager.UserControls.Configurator"
        Title="openPDC Manager: Configuration Editor" Height="360" Width="860" ResizeMode="NoResize" ShowInTaskbar="False">

    <Border Background="{StaticResource PortletBackgroundBrush}">
        <StackPanel Orientation="Vertical">
            <uc:ConfigurationCreator x:Name="UserControlConfiguratorCreator" HorizontalAlignment="Center" Background="Transparent"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ButtonClear" Content="/openPDCManager;component/images/Cancel.png" Tag="Cancel" Template="{StaticResource ImageButtonTemplate}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" Cursor="Hand" />
                <TextBlock Text="     "/>
                <Button x:Name="ButtonSave" Content="/openPDCManager;component/images/Save.png" Tag="Save" Template="{StaticResource ImageButtonTemplate}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" Cursor="Hand" />
            </StackPanel>
        </StackPanel>
    </Border>
</src:SecureWindow>
